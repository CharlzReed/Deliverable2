#!/bin/bash

classes=("Textbook extends Book" "Magazine implements Item" "CD implements Item" "Book implements Item" "Fine" "TextbookRequest" "Student implements User" "Visitor implements User" "Faculty implements User" "NonFaculty implements User" "Subscription" "Debit implements Payment" "Credit implements Payment" "MobileWallet implements Payment" "SystemAdmin" "Database")
interfaces=("Item" "User" "Payment")

classStarter='package com.example;

public class PLACEHOLDER {

}'

interfaceStarter='package com.example;

public interface PLACEHOLDER {

}
'

for i in "${classes[@]}"; do
filename=$(echo "$i" | cut -d ' ' -f 1)
class_name="$i"
starter_with_filename="${classStarter/PLACEHOLDER/$class_name}"
cat <<EOF > "$filename.java"
$starter_with_filename
EOF
echo "CREATED CLASS: $filename"
done

for i in "${interfaces[@]}"; do
starter_with_filename="${interfaceStarter/PLACEHOLDER/$i}"
cat <<EOF > "$i.java"
$starter_with_filename
EOF
echo "CREATED INTERFACE: $i"
done